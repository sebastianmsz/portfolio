# Portfolio Backend Configuration
# Copy this file to .env.local and fill in your values

# Email Configuration (Required)
# EMAIL_USER: Your email address (used to authenticate with SMTP)
EMAIL_USER=your-email@gmail.com

# EMAIL_PASS: App password from Gmail (NOT your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_PASS=abcd-efgh-ijkl-mnop

# EMAIL_RECEIVER: Where to receive contact form submissions (usually same as EMAIL_USER)
EMAIL_RECEIVER=your-email@gmail.com

# SMTP Configuration (Optional - defaults to Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Rate Limiting Configuration (Optional)
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=900000

# Security Configuration (Optional)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
TRUSTED_IPS=127.0.0.1,::1

# Environment
NODE_ENV=development

# CSRF Configuration (add these to your .env.local file)
# Whether to rotate CSRF tokens after each use (recommended for high security)
CSRF_ROTATE_ON_USE=false


    